<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greye">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_mf4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/userinfo_bg"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civ_mf4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_mf4_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猪场管理人员1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/civ_mf4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_mf4_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:wxid_7xpp2c1osrdu21"
            android:textColor="#eeeeee"
            android:layout_toRightOf="@id/civ_mf4"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/vector_drawable_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_mf4_alert"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/iv_mf4_alert"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/vector_drawable_alert"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体温异常预警体验"
            android:layout_toRightOf="@id/iv_mf4_alert"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff444444" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/vector_drawable_right_grey"
            android:layout_marginRight="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_mf4_preview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/iv_mf4_preview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/vector_drawable_preview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预览红外图像"
            android:layout_toRightOf="@id/iv_mf4_preview"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff444444"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/vector_drawable_right_grey"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_mf4_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/iv_mf4_submit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/vector_drawable_submit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题上报"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_mf4_submit"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff444444"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/vector_drawable_right_grey"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_mf4_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/iv_mf4_logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/vector_drawable_logout"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退出当前账号"
            android:textColor="#ff444444"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_mf4_logout"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/vector_drawable_right_grey"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>